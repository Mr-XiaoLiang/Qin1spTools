<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/configRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".config.ConfigActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Screen -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rootConfigScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="?attr/bg_config_card"
            android:padding="5dp">


            <TextView
                android:id="@+id/tvConfigScreenTitle"
                style="@style/ConfigTitleTextStyle"
                android:text="@string/PREF_SCREEN_OPTIONS"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/cmdScreenSizePresets"
                style="@style/ImageButtonStyle"
                android:layout_width="@dimen/height_config_row"
                android:layout_height="0dp"
                android:contentDescription="@string/SIZE_PRESETS"
                android:gravity="center"
                android:src="@drawable/ic_list"
                app:layout_constraintBottom_toBottomOf="@+id/tfScreenWidth"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvConfigScreenTitle"
                app:tooltipText="@string/SIZE_PRESETS" />

            <EditText
                android:id="@+id/tfScreenWidth"
                style="@style/EditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/PREF_WIDTH"
                android:importantForAutofill="no"
                android:inputType="numberSigned"
                android:maxLines="1"
                android:textSize="22sp"
                app:layout_constraintEnd_toStartOf="@+id/cmdSwapSizes"
                app:layout_constraintStart_toEndOf="@+id/cmdScreenSizePresets"
                app:layout_constraintTop_toBottomOf="@+id/tvConfigScreenTitle" />

            <ImageButton
                android:id="@+id/cmdSwapSizes"
                style="@style/ImageButtonStyle"
                android:layout_width="@dimen/height_config_row"
                android:layout_height="0dp"
                android:contentDescription="@string/SWAP_SIZES"
                android:gravity="center"
                android:src="@drawable/ic_swap"
                app:layout_constraintBottom_toBottomOf="@+id/tfScreenWidth"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvConfigScreenTitle"
                app:tooltipText="@string/SWAP_SIZES" />

            <EditText
                android:id="@+id/tfScreenHeight"
                style="@style/EditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/PREF_HEIGHT"
                android:importantForAutofill="no"
                android:inputType="numberSigned"
                android:maxLines="1"
                android:textSize="22sp"
                app:layout_constraintEnd_toStartOf="@+id/cmdAddToPreset"
                app:layout_constraintStart_toEndOf="@+id/cmdSwapSizes"
                app:layout_constraintTop_toBottomOf="@+id/tvConfigScreenTitle" />

            <ImageButton
                android:id="@+id/cmdAddToPreset"
                style="@style/ImageButtonStyle"
                android:layout_width="@dimen/height_config_row"
                android:layout_height="0dp"
                android:gravity="center"
                android:src="@drawable/ic_add_preset"
                app:layout_constraintBottom_toBottomOf="@+id/tfScreenHeight"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvConfigScreenTitle" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/cbLockAspect"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_config_row"
                android:text="@string/PREF_KEEP_ASPECT_RATIO"
                app:layout_constraintTop_toBottomOf="@+id/cmdSwapSizes"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/cmdScreenBack"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_margin="4dp"
                android:text="@string/PREF_BACKGROUND"
                app:layout_constraintEnd_toStartOf="@+id/barrierScreenConfig"
                app:layout_constraintBottom_toBottomOf="@+id/tfScreenBack"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tfScreenBack"
                app:layout_constraintWidth_min="wrap" />

            <EditText
                android:id="@+id/tfScreenBack"
                style="@style/EditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/PREF_COLOR_HINT"
                android:importantForAutofill="no"
                android:inputType="text|textCapCharacters|textNoSuggestions"
                android:textDirection="ltr"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/barrierScreenConfig"
                app:layout_constraintTop_toBottomOf="@+id/cbLockAspect"
                tools:ignore="UnusedAttribute" />


            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_config_row"
                android:gravity="center_vertical"
                android:text="@string/PREF_SCALE_RATIO"
                android:textColor="?attr/textColorSecondary"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tfScreenBack" />

            <SeekBar
                android:id="@+id/sbScaleRatio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:max="100"
                app:layout_constraintBottom_toBottomOf="@+id/tfScaleRatioValue"
                app:layout_constraintEnd_toStartOf="@+id/tfScaleRatioValue"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toTopOf="@+id/tfScaleRatioValue" />

            <EditText
                android:id="@+id/tfScaleRatioValue"
                style="@style/EditTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_config_row"
                android:ems="2"
                android:gravity="center"
                android:hint="100"
                android:importantForAutofill="no"
                android:inputType="number"
                android:textDirection="ltr"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tfScreenBack"
                tools:ignore="HardcodedText,UnusedAttribute" />


            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_config_row"
                android:gravity="center_vertical"
                android:text="@string/PREF_ORIENTATION"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="?attr/textColorSecondary"
                android:textSize="15sp"
                app:layout_constraintEnd_toStartOf="@+id/barrierScreenConfig"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:layout_constraintWidth_min="wrap" />

            <Spinner
                android:id="@+id/spOrientation"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_config_row"
                android:entries="@array/PREF_ORIENTATION_ENTRIES"
                android:textColor="?attr/textColorSecondary"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/barrierScreenConfig"
                app:layout_constraintTop_toTopOf="@+id/textView4" />

            <TextView
                android:id="@+id/tvScreenGravity"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_config_row"
                android:checked="false"
                android:gravity="center_vertical"
                android:text="@string/pref_screen_gravity"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="?attr/textColorSecondary"
                android:textSize="15sp"
                app:layout_constraintEnd_toStartOf="@+id/barrierScreenConfig"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                app:layout_constraintWidth_min="wrap" />

            <Spinner
                android:id="@+id/spScreenGravity"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_config_row"
                android:entries="@array/pref_screen_gravity_entries"
                android:textColor="?attr/textColorSecondary"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/barrierScreenConfig"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <TextView
                android:id="@+id/tvScaleType"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_config_row"
                android:checked="false"
                android:gravity="center_vertical"
                android:text="@string/pref_screen_scale_type"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="?attr/textColorSecondary"
                android:textSize="15sp"
                app:layout_constraintEnd_toStartOf="@+id/barrierScreenConfig"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvScreenGravity"
                app:layout_constraintWidth_min="wrap" />

            <Spinner
                android:id="@+id/spScaleType"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_config_row"
                android:entries="@array/pref_scale_type_entries"
                android:textColor="?attr/textColorSecondary"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/barrierScreenConfig"
                app:layout_constraintTop_toBottomOf="@+id/tvScreenGravity" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/cxFilter"
                style="@style/SwitchStyle"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_config_row"
                android:checked="false"
                android:text="@string/PREF_FILTER"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvScaleType" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/cxImmediate"
                style="@style/SwitchStyle"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_config_row"
                android:checked="false"
                android:text="@string/PREF_IMMEDIATE"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cxFilter" />

            <TextView
                android:id="@+id/tvGraphicsMode"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_config_row"
                android:checked="false"
                android:gravity="center_vertical"
                android:text="@string/pref_graphics_mode_title"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="?attr/textColorSecondary"
                android:textSize="15sp"
                app:layout_constraintEnd_toStartOf="@+id/barrierScreenConfig"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cxImmediate"
                app:layout_constraintWidth_min="wrap" />

            <Spinner
                android:id="@+id/spGraphicsMode"
                style="@style/SwitchStyle"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_config_row"
                android:entries="@array/pref_graphics_mode_entries"
                android:textColor="?attr/textColorSecondary"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/barrierScreenConfig"
                app:layout_constraintTop_toBottomOf="@+id/cxImmediate" />

            <LinearLayout
                android:id="@+id/shaderContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvGraphicsMode"
                tools:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/PREF_SHADER_FILTER"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?attr/textColorSecondary"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/spShader"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="?attr/textColorSecondary"
                    android:textSize="15sp" />

                <ImageButton
                    android:id="@+id/btShaderTune"
                    style="@style/ImageButtonStyle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@string/shader_tuning"
                    android:src="@drawable/ic_baseline_tune_24"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </LinearLayout>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/cxParallel"
                style="@style/SwitchStyle"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_config_row"
                android:checked="false"
                android:text="@string/parallel_screen_redrawing"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/shaderContainer"
                tools:visibility="visible" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/cxForceFullscreen"
                style="@style/SwitchStyle"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_config_row"
                android:checked="false"
                android:text="@string/PREF_FORCE_FULLSCREEN"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cxParallel" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/cxShowFps"
                style="@style/SwitchStyle"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_config_row"
                android:checked="false"
                android:text="@string/PREF_SHOW_FPS"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cxForceFullscreen" />


            <TextView
                android:id="@+id/tvLimitFps"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_config_row"
                android:layout_marginBottom="9dp"
                android:gravity="center_vertical"
                android:text="@string/PREF_LIMIT_FPS"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="?attr/textColorSecondary"
                android:textSize="15sp"
                app:layout_constraintEnd_toStartOf="@+id/barrierScreenConfig"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cxShowFps"
                app:layout_constraintWidth_min="wrap" />

            <EditText
                android:id="@+id/etFpsLimit"
                style="@style/EditTextStyle"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_config_row"
                android:layout_marginBottom="9dp"
                android:width="0dp"
                android:gravity="center"
                android:hint="@string/unlimited"
                android:importantForAutofill="no"
                android:inputType="number|numberSigned"
                android:textDirection="ltr"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/barrierScreenConfig"
                app:layout_constraintTop_toBottomOf="@+id/cxShowFps"
                tools:ignore="UnusedAttribute" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrierScreenConfig"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                app:barrierDirection="end"
                app:constraint_referenced_ids="cmdScreenBack,textView4,tvScaleType,tvGraphicsMode,tvLimitFps,tvScreenGravity"
                tools:layout_editor_absoluteX="114dp"
                tools:layout_editor_absoluteY="5dp" />


        </androidx.constraintlayout.widget.ConstraintLayout><!-- Screen -->

        <!-- Font -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rootConfigFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="?attr/bg_config_card"
            android:padding="5dp"
            app:elevation="2dp">

            <TextView
                android:id="@+id/tvConfigFontTitle"
                style="@style/ConfigTitleTextStyle"
                android:text="@string/PREF_FONT_OPTIONS"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <EditText
                android:id="@+id/tfFontSizeSmall"
                style="@style/EditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/PREF_FONT_SMALL"
                android:importantForAutofill="no"
                android:inputType="number"
                android:textDirection="ltr"
                app:layout_constraintEnd_toStartOf="@+id/textView8"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvConfigFontTitle"
                tools:ignore="UnusedAttribute" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="20dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="@string/_FONT_SEPARATOR"
                android:textAppearance="?android:attr/textAppearanceMedium"
                app:layout_constraintBottom_toBottomOf="@+id/tfFontSizeSmall"
                app:layout_constraintEnd_toStartOf="@+id/tfFontSizeMedium"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tfFontSizeSmall"
                app:layout_constraintTop_toTopOf="@+id/tfFontSizeSmall" />

            <EditText
                android:id="@+id/tfFontSizeMedium"
                style="@style/EditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/PREF_FONT_MEDIUM"
                android:importantForAutofill="no"
                android:inputType="number"
                android:textDirection="ltr"
                app:layout_constraintEnd_toStartOf="@+id/textView9"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/textView8"
                app:layout_constraintTop_toBottomOf="@+id/tvConfigFontTitle"
                tools:ignore="UnusedAttribute" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="20dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="@string/_FONT_SEPARATOR"
                android:textAppearance="?android:attr/textAppearanceMedium"
                app:layout_constraintBottom_toBottomOf="@+id/tfFontSizeLarge"
                app:layout_constraintEnd_toStartOf="@+id/tfFontSizeLarge"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tfFontSizeMedium"
                app:layout_constraintTop_toTopOf="@+id/tfFontSizeLarge" />

            <EditText
                android:id="@+id/tfFontSizeLarge"
                style="@style/EditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/PREF_FONT_LARGE"
                android:importantForAutofill="no"
                android:inputType="number"
                android:textDirection="ltr"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/textView9"
                app:layout_constraintTop_toBottomOf="@+id/tvConfigFontTitle"
                tools:ignore="UnusedAttribute" />


            <Button
                android:id="@+id/cmdFontSizePresets"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_margin="4dp"
                android:gravity="center"
                android:text="@string/SIZE_PRESETS"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tfFontSizeMedium" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/cxFontSizeInSP"
                style="@style/SwitchStyle"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_config_row"
                android:text="@string/PREF_FONT_SIZE_IN_SP"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cmdFontSizePresets" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/cxFontAA"
                style="@style/SwitchStyle"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_config_row"
                android:text="@string/PREF_FONT_ANTI_ALIASING"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cxFontSizeInSP" />

        </androidx.constraintlayout.widget.ConstraintLayout><!-- Font -->

        <!-- System Properties -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="?attr/bg_config_card"
            android:padding="5dp"
            app:elevation="2dp">

            <TextView
                android:id="@+id/textView5"
                style="@style/ConfigTitleTextStyle"
                android:text="@string/PREF_SYS_PROPS"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btEncoding"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_margin="4dp"
                android:text="@string/pref_encoding_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <EditText
                android:id="@+id/tfSystemProperties"
                style="@style/EditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/PREF_SYS_PROPS_HINT"
                android:importantForAutofill="no"
                android:inputType="textMultiLine"
                android:textDirection="ltr"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btEncoding"
                tools:ignore="UnusedAttribute" />

        </androidx.constraintlayout.widget.ConstraintLayout><!-- System Properties -->
    </LinearLayout>

</ScrollView>
