<?xml version="1.0" encoding="utf-8"?>
<com.lollipop.qin1sptools.view.TileGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:tileSpaceWidth="10dp"
    app:tileSpanXCount="5"
    app:tileSpanYCount="6"
    tools:context=".activity.dashboard.DashboardActivity">

    <com.lollipop.qin1sptools.view.DashboardCardView
        style="@style/DashboardTile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:tileIndexX="0"
        app:tileIndexY="0"
        app:tileSpanX="5"
        app:tileSpanY="2"
        app:markTextValue="@string/memory"
        app:markTextSize="14sp">
        <fragment
            android:id="@+id/memoryDashboardFragment"
            android:name="com.lollipop.qin1sptools.fragment.dashboard.MemoryDashboardFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.lollipop.qin1sptools.view.DashboardCardView>

    <com.lollipop.qin1sptools.view.DashboardCardView
        style="@style/DashboardTile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:tileIndexX="0"
        app:tileIndexY="2"
        app:tileSpanX="3"
        app:tileSpanY="4"
        app:markTextValue="@string/storage"
        app:markTextSize="16sp">

        <fragment
            android:id="@+id/storageDashboardFragment"
            android:name="com.lollipop.qin1sptools.fragment.dashboard.StorageDashboardFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.lollipop.qin1sptools.view.DashboardCardView>

    <com.lollipop.qin1sptools.view.DashboardCardView
        style="@style/DashboardTile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:tileIndexX="3"
        app:tileIndexY="2"
        app:tileSpanX="2"
        app:tileSpanY="4"
        tools:markTextValue="@string/app_name"
        app:markTextSize="14sp"
        app:markTextValue="@string/app_name">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_empty"
            android:scaleType="centerCrop"/>

    </com.lollipop.qin1sptools.view.DashboardCardView>

</com.lollipop.qin1sptools.view.TileGroup>