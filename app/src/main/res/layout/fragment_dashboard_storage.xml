<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.dashboard.StorageDashboardFragment"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="0px"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <com.lollipop.qin1sptools.view.VerticalProgressBar
            android:id="@+id/internalProgressBar"
            app:vpBackgroundColor="@color/progressBackground"
            app:vpProgressColor="@color/colorPrimary"
            app:max="100"
            app:progress="50"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.lollipop.qin1sptools.view.VerticalTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/internalValueView"
            android:gravity="center"
            android:textSize="14sp"
            android:text="@string/app_name"
            android:rotation="-90"
            android:layout_gravity="center"
            android:textColor="@color/white"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/externalGroup"
        android:layout_width="0px"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <com.lollipop.qin1sptools.view.VerticalProgressBar
            android:id="@+id/externalProgressBar"
            app:vpBackgroundColor="@color/progressBackground"
            app:vpProgressColor="@color/colorPrimary"
            app:max="100"
            app:progress="50"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.lollipop.qin1sptools.view.VerticalTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/externalValueView"
            android:gravity="center"
            android:textSize="14sp"
            android:text="@string/app_name"
            android:rotation="-90"
            android:layout_gravity="center"
            android:textColor="@color/white"/>
    </FrameLayout>


</LinearLayout>