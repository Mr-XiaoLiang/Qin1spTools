<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:cropToPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <com.lollipop.qin1sptools.view.ShapeGroup
            android:id="@+id/shapeGroup"
            android:cropToPadding="false"
            android:layout_width="0px"
            android:layout_height="0px"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintDimensionRatio="1:1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/iconView"/>

            <TextView
                android:layout_gravity="end|bottom"
                android:cropToPadding="false"
                android:id="@+id/positionView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:minHeight="16dp"
                android:minWidth="16dp"
                android:gravity="center"
                android:background="@drawable/bg_position"
                android:textColor="@color/positionColor"
                android:text="1"/>

        </com.lollipop.qin1sptools.view.ShapeGroup>

        <ImageView
            android:layout_width="0px"
            android:layout_height="0px"
            android:id="@+id/selectedFrameView"
            app:layout_constraintTop_toTopOf="@id/shapeGroup"
            app:layout_constraintBottom_toBottomOf="@id/shapeGroup"
            app:layout_constraintLeft_toLeftOf="@id/shapeGroup"
            app:layout_constraintRight_toRightOf="@id/shapeGroup"/>

        <com.lollipop.qin1sptools.view.GridSelectedFrameView
            android:layout_width="0px"
            android:layout_height="0px"
            app:gsfColor="@color/colorPrimary"
            app:gsfRadius="16dp"
            app:gsfStrokeWidth="4dp"
            app:layout_constraintTop_toTopOf="@id/shapeGroup"
            app:layout_constraintBottom_toBottomOf="@id/shapeGroup"
            app:layout_constraintLeft_toLeftOf="@id/shapeGroup"
            app:layout_constraintRight_toRightOf="@id/shapeGroup"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>